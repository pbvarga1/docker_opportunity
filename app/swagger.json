                        "in": "query",
                        "description": "Whether or not the image has a detatched label",
                        "required": false,
                        "type": "boolean"
                    },
                    {
                        "name": "CameraID",
                        "in": "query",
                        "description": "Camera ID of the image",
                        "required": false,
                        "type": "integer",
                        "format": "int64",
                    },
                    {
                        "name": "ProductTypeID",
                        "in": "query",
                        "description": "Product Type ID of the image",
                        "required": false,
                        "type": "integer",
                        "format": "int64",
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "schema": {
                            "$ref": "#/definitions/Image"
                        }
                    },
                    "404": {
                        "description": "Could not find image with the ID"
                    }
                }
            },
            "put": {
                "tags": [
                    "images"
                ],
                "summary": "Update image by ID",
                "description": "Update a single image",
                "operationId": "updateImageById",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "ID",
                        "in": "path",
                        "description": "ID of image",
                        "required": true,
                        "type": "integer",
                        "format": "int64",
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "An image objected to be registered",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Name": {
                                    "type": "string",
                                },
                                "URL": {
                                    "type": "string"
                                },
                                "Sol": {
                                    "type": "integer",
                                    "format": "int32"
                                },
                                "DetatchedLabel": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "CameraID": {
                                    "type": "integer",
                                    "format": "int64"
                                },
                                "ProductTypeID": {
                                    "type": "integer",
                                    "format": "int64"
                                },
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "schema": {
                            "$ref": "#/definitions/Image"
                        }
                    },
                    "404": {
                        "description": "Could not find image with the ID or query params"
                    },
                    "400": {
                        "description": "Query params found too many resources"
                    }
                }
            },
            "delete": {
